{
    "manifest_version": 3,
    "minimum_chrome_version": "91",
    "name": "Venticord Web",
    "description": "The cutest Discord mod's silliest mod, now in your browser",
    "author": "freesmart",
    "homepage_url": "https://github.com/Venticord/Venticord",
    "icons": {
        "128": "icon.png"
    },
    "host_permissions": [
        "*://*.discord.com/*",
        "https://raw.githubusercontent.com/*"
    ],
    "permissions": [
        "declarativeNetRequest"
    ],
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "*://*.discord.com/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "dist/*",
                "third-party/*"
            ],
            "matches": [
                "*://*.discord.com/*"
            ]
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "modifyResponseHeaders",
                "enabled": true,
                "path": "modifyResponseHeaders.json"
            }
        ]
    }
}